@model Kurs
<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-5">

        <div class="row pb-3">
            <h2 class="text-primary">kursu sil</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="KursAdi" class="p-0"></label>
            <input asp-for="KursAdi" disabled class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Konu" class="p-0"></label>
            <input asp-for="Konu" disabled class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Yayinlayan" class="p-0"></label>
            <input asp-for="Yayinlayan" disabled class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Fiyat" class="p-0"></label>
            <input asp-for="Fiyat" disabled class="form-control" />
        </div>
        <div>
            <button type="submit" class="btn btn-primary" style="width:250px">Kursu sil</button>
            <a asp-controller="Kurs" asp-action="Index" class="btn btn-primary" style="width:250px">Kurslarıma geri dön</a>
        </div>

    </div>
</form>

